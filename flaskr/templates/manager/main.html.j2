{% extends "base.html.j2" %}
{% block title %}Passwords{% endblock %}
{% block content %}
<!-- Navigation bar -->
<style>
    .flash {
        margin-top: 60px !important;
        z-index: 40;
    }
</style>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">2-FA Password Manager</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/add-password">Add Password</a>
                </li>
            </ul>
        </div>
    </div>
</nav>






<div class="container" style="margin-top: 100px;">
    <h2 class="display-4">Saved Passwords</h2>
    <div class="row mb-3">
        <div class="col-md-6">
            <a href="/add-password" class="btn btn-dark" style="margin-top: 50px;">Add Password</a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Website</th>
                <th>Username/email</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            {% for password in g.passwords %}
            <tr>

                <td><a target="_blank"
                        href="{% if 'http' in password[1] %}{{ password[1] }}{% else %}https://{{ password[1] }}{% endif %}"
                        style="color: inherit;">{{ password[1] }}</a></td>
                <td>{{ password[2] }}</td>
                <td>
                    <div class="password-field" style="display: flex; align-items: center;">
                        <!-- Hidden text initially positioned on the left -->
                        <b id="hiddenText{{ password[0] }}"
                            style="display: none; position:absolute;">{{password[3]}}</b>

                        <!-- Button to reveal/hide the password on the right -->
                        <button style="margin-left: auto; border-radius: 6px 0 0 6px;"
                            onclick="showText('hiddenText{{ password[0] }}', this)" class="btn btn-primary">Show
                            Password</button>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-dark" data-bs-toggle="dropdown"
                                style="border-radius: 0 6px 6px 0;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                                    <path
                                        d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                </svg>
                            </button>
                            <div class="dropdown-menu">
                                {# <a href="" class="dropdown-item" title="Edit Name">
                                    <i class="fas fa-edit"></i> Edit Service Name
                                </a> #}
                                <button type="button" class="dropdown-item delete-button" data-bs-toggle="modal"
                                    data-bs-target="#confirmDelete{{ password[0] }}" title="Delete">
                                    <i class="fas fa-trash"></i> Delete Credentials</button>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>

            {% endfor %}
        </tbody>
    </table>
    {% for password in g.passwords %}
    <div class="modal fade" id="confirmDelete{{ password[0] }}" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this password?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="post" action="{{ url_for('view.deletepassword') }}">
                        <input type="hidden" name="id" value="{{ password[0] }}">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}


    <script>
        function showText(hiddenTextId, button) {
            // Get the hidden text element using the provided ID
            var hiddenText = document.getElementById(hiddenTextId);

            // Toggle the display style between 'none' and 'block'
            if (hiddenText.style.display === 'none') {
                hiddenText.style.display = 'block';
                button.innerText = 'Hide Password';
                button.classList.remove('btn-primary');
                button.classList.add('btn-danger');
            } else {
                hiddenText.style.display = 'none';
                button.innerText = 'Show Password';
                button.classList.remove('btn-danger');
                button.classList.add('btn-primary');
            }
        }
    </script>

    {% endblock %}