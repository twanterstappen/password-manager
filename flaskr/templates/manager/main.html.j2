{% extends "base.html.j2" %}
{% block title %}Login{% endblock %}
{% block content %}
<!-- Navigation bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">Password Manager</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="">Add Password</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Main content -->
<div class="container mt-4">
    <!-- User feedback messages -->


    <!-- Specific page content will be inserted here -->

    <h1 class="display-4">Welcome to the Password Manager</h1>
    <p class="lead">Here, you can manage your passwords securely and easily.</p>
    <!-- Add more content here -->

</div>






<div class="container">
    <h2 class="display-4">Saved Passwords</h2>
    <div class="row mb-3">
        <div class="col-md-6">
            <a href="test" class="btn btn-dark">Add Password</a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Website</th>
                <th>Username/email</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for password in g.passwords %}
            <tr>
                <td>{{ password[1] }}</td>
                <td>{{ password[2] }}</td>
                <td>
                    <div class="password-field" style="display: flex; align-items: center;">
                        <!-- Hidden text initially positioned on the left -->
                        <b id="hiddenText{{ password[0] }}" style="display: none; position: absolute;">{{password[3]}}</b>

                        <!-- Button to reveal/hide the password on the right -->
                        <button style="margin-left: auto;" onclick="showText('hiddenText{{ password[0] }}', this)"class="btn btn-primary">Show Password</button>
                    </div>
                </td>


                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-dark" data-bs-toggle="dropdown">
                            Actions
                        </button>
                        <div class="dropdown-menu">
                            <a href="" class="dropdown-item" title="View">
                                <i class="fas fa-eye"></i> View Password
                            </a>
                            <a href="test" class="dropdown-item" title="Edit Name">
                                <i class="fas fa-edit"></i> Edit Service Name
                            </a>
                            <a href="test" class="dropdown-item" title="Edit Username">
                                <i class="fas fa-user-edit"></i> Edit Username
                            </a>
                            <a href="test" class="dropdown-item" title="Edit Password">
                                <i class="fas fa-key"></i> Edit Password
                            </a>
                            <button type="button" class="dropdown-item delete-button" data-bs-toggle="modal"
                                data-bs-target="#confirmDelete  password.id" title="Delete">
                                <i class="fas fa-trash"></i> Delete Password
                            </button>
                        </div>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>



    <script>
        function showText(hiddenTextId, button) {
            // Get the hidden text element using the provided ID
            var hiddenText = document.getElementById(hiddenTextId);

            // Toggle the display style between 'none' and 'block'
            if (hiddenText.style.display === 'none') {
                hiddenText.style.display = 'block';
                button.innerText = 'Hide Password';
                button.classList.remove('btn-primary');
                button.classList.add('btn-danger');
            } else {
                hiddenText.style.display = 'none';
                button.innerText = 'Show Password';
                button.classList.remove('btn-danger');
                button.classList.add('btn-primary');
            }
        }
    </script>

    {% endblock %}