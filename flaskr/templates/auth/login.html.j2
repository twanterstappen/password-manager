{% extends "base.html.j2" %}
{% block title %}Login{% endblock %}
{% block content %}

    <style>
        .title{
            margin: 0 auto;
            text-align: center;
        }

        .container {
          width: 300px;
          padding: 16px;
          background-color: var(--secondary);
          margin: 0 auto;
          margin-top: 110px;
          border-radius: 4px;
        }

        .login-form {
          display: flex;
          flex-direction: column;
        }

        .login-form label {
          margin-bottom: 5px;
        }

        .login-form input {
          margin-bottom: 15px;
          padding: 8px;
          border: 1px solid rgb(0, 0, 0);
          border-radius: 4px;
        }

        .login-form button {
          cursor: pointer;
          background-color: var(--primary);
          border: none;
          color: rgb(0, 0, 0);
          padding: 10px 20px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          font-size: 16px;
          margin: 4px 2px;
          transition-duration: 0.4s;
          border-radius: 4px;
          border: 1px solid black;
        }

        .login-form button:hover {
          background-color: var(--accent);
        }

        .options {
          margin-top: 0px;
          text-align: right;
          font-size:smaller;
        }

        .options a {
          color: rgb(36, 36, 36);
        
        }

        .options a:hover {
          color: var(--accent);
        }

        .or{
          text-align: center;
          margin-top: 35px;
        }

        .register{
          text-align: center;
          margin-top: 50px;
        }
        .register a{
          color: black;
        }
        .register a:hover {
          color: var(--accent);
        }
    </style>
    
     <div class="container">
        <h1 class="title">Login</h1>
        <br><br><br>
        <form class="login-form" method="post">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" placeholder="email@example.com" required>
          
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" placeholder="password" required>
          
          <button type="submit">Login</button>
        </form>
    
        <div class="options">
          <a href="#"><i>Forgot password?</i></a>
        </div>
        <div class="or">or</div>
        <div class="register">
          <a href="/register">Register here!</a>
        </div>
     </div>
{% endblock %}