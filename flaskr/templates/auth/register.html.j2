{% extends "base.html.j2" %}
{% block title %}Login{% endblock %}
{% block content %}

    <style>
        .title{
            margin: 0 auto;
            text-align: center;
        }

        .container {
          width: 300px;
          padding: 16px;
          margin: 0 auto;
          margin-top: 110px;
          border-radius: 20px;
          border-color: black;
          border-style: solid;
        }

        .login-form {
          display: flex;
          flex-direction: column;
        }

        .login-form label {
          margin-bottom: 5px;
        }

        .login-form input {
          margin-bottom: 15px;
          padding: 8px;
          border: 1px solid rgb(0, 0, 0);
          border-radius: 4px;
        }
        .login-form button {
          padding: 10px 20px;
        }
        .options {
          margin-top: 0px;
          text-align: right;
          font-size:smaller;
        }

        .options a {
          color: rgb(0, 0, 0);
        
        }

        .options a:hover {
          color: rgb(121, 121, 121);
        }

        .or{
          text-align: center;
          margin-top: 35px;
        }

        .register{
          text-align: center;
          margin-top: 50px;
        }
        .register a{
          color: black;
        }
        .register a:hover {
          color: rgb(121, 121, 121);
        }
    </style>
    
     <div class="container bg-light">
        <h1 class="title">Register</h1>
        <br><br><br>
        <form class="login-form" method="post">
          <label for="token"><b>Register-token:</b></label>
          <input type="token" id="token" name="token" placeholder="token" required>

          <label for="username"><b>Username:</b></label>
          <input type="username" id="username" name="username" placeholder="username" required>

          <label for="email"><b>Email:</b></label>
          <input type="email" id="email" name="email" placeholder="email@example.com" required>
          
          <label for="password"><b>Password:</b></label>
          <input type="password" id="password" name="password" placeholder="password" required>

          <label for="c-password"><b>Confirm password:</b></label>
          <input type="password" id="c-password" name="c-password" placeholder="password" required>
          
          <button class="btn btn-dark " type="submit">Register</button>
        </form>
        <div class="or">or</div>
        <div class="register">
          <a href="/login">Login Here!</a>
        </div>
     </div>
{% endblock %}