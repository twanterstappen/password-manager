{% extends "base.html.j2" %}
{% block title %}Register{% endblock %}
{% block content %}

    <style>
        .title{
            margin: 0 auto;
            text-align: center;
        }

        .container {
          width: 300px;
          padding: 16px;
          background-color: white;
          margin: 0 auto;
          margin-top: 110px;
          border: 1px solid black;
          border-radius: 4px;
        }

        .register-form {
          display: flex;
          flex-direction: column;
        }

        .register-form label {
          margin-bottom: 5px;
        }

        .register-form input {
          margin-bottom: 15px;
          padding: 8px;
          border: 1px solid grey;
          border-radius: 4px;
        }

        .register-form button {
          cursor: pointer;
          background-color: rgb(228, 213, 0);
          border: none;
          color: rgb(0, 0, 0);
          padding: 10px 20px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          font-size: 16px;
          margin: 4px 2px;
          transition-duration: 0.4s;
          border-radius: 4px;
        }

        .register-form button:hover {
          background-color: rgb(238, 255, 3);
        }

        .options {
          margin-top: 10px;
          text-align: right;
        }

        .options a {
          color: grey;
        
        }

        .options a:hover {
          color: black;
        }

        .or{
          text-align: center;
          margin-top: 25px;
        }

        .register{
          text-align: center;
          margin-top: 50px;
        }
        .register a{
          color: black;
        }
        .register a:hover {
          color: rgb(63, 63, 63);
        }
    </style>
    
     <div class="container">
        <h1 class="title">Register</h1>
        <br><br><br>
        <form class="register-form" method="post">
          <label for="token">register-token:</label>
          <input type="token" id="token" name="token" placeholder="token" required>

          <label for="username">Username:</label>
          <input type="username" id="username" name="username" placeholder="username" required>

          <label for="email">Email:</label>
          <input type="email" id="email" name="email" placeholder="email@example.com" required>
          
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" placeholder="password" required>

          <label for="c-password">Confirm password:</label>
          <input type="c-password" id="c-password" name="c-password" placeholder="c-password" required>
          
          <button type="submit">Register</button>
        </form>
        <div class="or">or</div>
        <div class="register">
          <a href="/login">login here!</a>
        </div>
     </div>
{% endblock %}